{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "extends": [
        "wesbos"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
        "class-methods-use-this": "off",
        "no-restricted-syntax": "warn",
        "guard-for-in": "warn",
        "no-shadow": "warn",
        "import/no-unresolved": [
            "off",
            {
                "caseSensitive": false
            }
        ],
        "no-unused-vars": "off",
        "no-console": "warn",
        "init-declarations": "off",
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 120,
                "tabWidth": 4
            }
        ]
    }
}